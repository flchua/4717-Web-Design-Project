/**
 * Generic
 */

/* Box sizing */
*, *:before, *:after {
	vendor('box-sizing', border-box)
}

/* Consistent bold instead of bolder */
b
strong
	font-weight bold

/* Reset default cursor for disabled elements. */
button[disabled]
html input[disabled]
	cursor default

/* Reset table spacings */
table
	border-collapse collapse
	border-spacing 0

td
th
	padding 0

/* Remove default margin. */
html
body
	margin 0

/* Remove dotted outline on link focus and hover. */
aactive
ahover
	outline 0

/* Correct button and select style inheritance in Firefox */
button
select
	text-transform none

/* Correct focus style in Firefox. */
button-moz-focus-inner
[type="button"]-moz-focus-inner
[type="reset"]-moz-focus-inner
[type="submit"]-moz-focus-inner
	border-style none
	padding 0

button-moz-focusring
[type="button"]-moz-focusring
[type="reset"]-moz-focusring
[type="submit"]-moz-focusring
	outline 1px dotted

/* Correct the cursor style of increment and decrement buttons in Chrome. */
[type="number"]-webkit-inner-spin-button
[type="number"]-webkit-outer-spin-button
	height auto

/* Correct the odd appearance in Chrome. */
[type="search"]
	-webkit-appearance textfield
	-webkit-box-sizing content-box
	box-sizing content-box

/**
 * Layout
 */

/* All Sizes */
.container
	display flex
	max-width 100% !important
	margin-left auto !important
	margin-right auto !important
	+mobile()
		width 48em
	+desktop()
		width 62em
	+hd()
		width 75em

.row
	position relative
	display -webkit-box
	display -ms-flexbox
	display flex
	flex-wrap wrap
	-webkit-box-orient horizontal
	-webkit-box-direction normal
	-ms-flex-direction row
	flex-direction row
	-webkit-box-pack inherit
	-ms-flex-pack inherit
	justify-content inherit
	-webkit-box-align stretch
	-ms-flex-align stretch
	align-items stretch
	width 100% !important
	padding 0

.column
	position relative
	display flex
	flex-wrap wrap
	vertical-align top
	padding 0 size-m

.column.one
	width 8.333333%

.column.two
	width 16.666667%

.column.three
	width 25%

.column.four
	width 33.333333%

.column.five
	width 41.666667%

.column.six
	width 50%

.column.seven
	width 58.333333%

.column.eight
	width 66.666667%

.column.nine
	width 75%

.column.ten
	width 83.333333%

.column.eleven
	width 91.666667%

.column.twelve
	width 100%

.column.centered
	text-align center

/**
 * Debugger
 */

.debug *
	transition()

.debug:not(.d).o *:hover
	outline(inset alpha(color-black, 0.5))

.debug:not(.d).f *:hover
	background-color alpha(color-black, 0.05)

.debug:not(.h):not(.d).o *
	outline(inset alpha(color-black, 0.5))

.debug:not(.h):not(.d).f *
	background-color alpha(color-black, 0.05)
